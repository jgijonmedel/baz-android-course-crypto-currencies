<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CryptoCurrencies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/light_primary_variant</item>
        <item name="colorOnPrimary">@color/light_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_secondary</item>
        <item name="colorSecondaryVariant">@color/light_secondary_variant</item>
        <item name="colorOnSecondary">@color/light_on_secondary</item>
        <!-- background color. -->
        <item name="backgroundColor">@color/light_background</item>
        <item name="android:windowBackground">?attr/backgroundColor</item>
        <!-- surface color-->
        <item name="colorSurface">@color/light_surface</item>

        <item name="colorError">@color/light_secondary</item>
        <!--
        <item name="colorOnSurface">@color/light_loading</item>
        -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/backgroundColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?attr/backgroundColor</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="text_header" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_header</item>
    </style>

    <style name="text_title" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="text_subtitle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_subtitle</item>
    </style>

    <style name="text_body" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="text_caption" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_caption</item>
    </style>

    <style name="radio_asks_bids" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:textAppearance">@style/text_body</item>
        <item name="android:background">@drawable/radio_background</item>
        <item name="android:paddingHorizontal">@dimen/spacing_medium</item>
        <item name="android:textColor">@drawable/radio_text_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>

